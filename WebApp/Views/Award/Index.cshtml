@model IEnumerable<WebApp.Models.AwardModel>

@{
    ViewBag.Title = "Index";
}

<h2>Награды</h2>

<p>
    @Html.ActionLink("Добавить награду", "Add")
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            Изображение
        </th>
        <th>
            Название
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) 
{
    <tr>
        <td>
            <img src="@Url.Action("GetImage", new {imageId = item.ImageId})" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Update", new { awardId = item.Id })
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", new { awardId = item.Id })
        </td>
    </tr>
}

</table>
