@model WebApp.Models.UserWithAwardsModel

@{
    ViewBag.Title = "Get";
}

<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <img src="@Url.Action("GetImage", new {imageId = Model.ImageId})" />
        </dt>

        <dt>
            Имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Дата рождения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            Возраст
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>

    <h4>Награды</h4>

    <table class="table table-hover table-bordered">
        <tr>
            <th>
                Изображение
            </th>
            <th>
                Название
            </th>
        </tr>

        @foreach (var item in Model.Awards)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetImage", "Award", new {imageId = item.ImageId})" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
            </tr>
        }

    </table>

</div>

<p>
    @Html.ActionLink("Редактировать награды", "GetAvailableAwards", new { userId = Model.Id })
</p>

<div>
    @Html.ActionLink("К списку пользователей", "Index")
</div>