@model WebApp.Models.UserWithAwardsModel

@{
    ViewBag.Title = "Get";
}

<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Дата рождения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            Возраст
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>

    <table class="table table-hover table-bordered">
        <tr>
            <th>
                Награды
            </th>
        </tr>

        @foreach (var item in Model.Awards)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
            </tr>
        }

    </table>
</div>

<p>
    @Html.ActionLink("Редактировать награды", "GetAvailableAwards", new { userId = Model.Id })
</p>
